<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/firemansam_bg"
                tools:context=".MainActivity">


    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Season 1"
            android:onClick="onClickSeason1"
            android:id="@+id/season1" android:layout_centerVertical="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#dfdfdf"
            />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Season 2"
            android:onClick="onClickSeason2"
            android:background="#dfdfdf"
            android:id="@+id/season2" android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Season 3"
            android:onClick="onClickSeason3"
            android:background="#dfdfdf"
            android:id="@+id/season3"
            android:layout_alignTop="@+id/season2" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>
